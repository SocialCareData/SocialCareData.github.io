{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Social Care Data Standard Specification",
  "type": "object",
  "required": ["metadata", "entities"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "version", "status", "effectiveDate"],
      "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "published", "deprecated"] },
        "effectiveDate": { "type": "string", "format": "date" },
        "description": { "type": "string" }
      }
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "fields"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "cardinality"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "cardinality": { "type": "string", "pattern": "^[0-1]\.\.(\*|1)$" },
                "description": { "type": "string" },
                "example": { "type": "string" },
                "constraints": { "type": "string" },
                "vocabulary": { 
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "url": { "type": "string", "format": "uri" }
                  },
                  "required": ["name", "url"]
                },
                "reference": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}